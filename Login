<!DOCTYPE html>
<html>
<head>
  <title>ComiJá - Login</title>
  <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap" rel="stylesheet">
  <style>
    body { font-family: 'Roboto', sans-serif; background: #FFF; margin: 0; padding: 20px; text-align: center; }
    .logo { color: #FF6B00; font-size: 2.5em; font-weight: bold; margin: 30px 0; }
    input { width: 80%; padding: 12px; margin: 10px 0; border: 1px solid #ddd; border-radius: 8px; }
    .btn-laranja { background: #FF6B00; color: white; border: none; padding: 12px 20px; width: 85%; border-radius: 8px; font-weight: bold; cursor: pointer; }
    .btn-cadastro { background: white; color: #FF6B00; border: 1px solid #FF6B00; padding: 12px 20px; width: 85%; border-radius: 8px; margin-top: 10px; cursor: pointer; }
  </style>
</head>
<body>
  <div class="logo">ComiJá</div>
  
  <input type="email" id="loginEmail" placeholder="E-mail">
  <input type="password" id="loginSenha" placeholder="Senha">
  <button class="btn-laranja" onclick="fazerLogin()">Entrar</button>
  
  <button class="btn-cadastro" onclick="irParaCadastro()">Criar conta</button>

  <script src="https://www.gstatic.com/firebasejs/9.0.2/firebase-app.js"></script>
  <script src="https://www.gstatic.com/firebasejs/9.0.2/firebase-auth.js"></script>
  <script src="firebase-config.js"></script>
  <script>
    function fazerLogin() {
      const email = document.getElementById("loginEmail").value;
      const senha = document.getElementById("loginSenha").value;
      
      firebase.auth().signInWithEmailAndPassword(email, senha)
        .then(() => window.location.href = "home.html")
        .catch(error => alert("Erro: " + error.message));
    }

    function irParaCadastro() {
      window.location.href = "cadastro.html";
    }
  </script>
</body>
</html>
